<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="co.edu.uniquindio.poo.trabajofinalbiblioteca.viewController.LoginViewController"
            prefWidth="400.0" prefHeight="300.0">

    <Label layoutX="140.0" layoutY="40.0" text="Inicio de Sesión" style="-fx-font-size: 20px;" />

    <TextField fx:id="usuarioField" layoutX="100.0" layoutY="90.0" prefWidth="200.0" promptText="Usuario" />
    <PasswordField fx:id="contraseniaField" layoutX="100.0" layoutY="130.0" prefWidth="200.0" promptText="Contraseña" />

    <RadioButton fx:id="adminRadioBtn" layoutX="100.0" layoutY="170.0" text="Administrador" toggleGroup="$rolGroup" />
    <RadioButton fx:id="bibliotecarioRadioBtn" layoutX="220.0" layoutY="170.0" text="Bibliotecario" toggleGroup="$rolGroup" />

    <Button fx:id="ingresarBtn" layoutX="160.0" layoutY="210.0" text="Ingresar" onAction="#ingresar" />

</AnchorPane>
